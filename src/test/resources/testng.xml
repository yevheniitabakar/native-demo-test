<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Native Demo Suite" parallel="tests" thread-count="1">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.demo.framework.listeners.AllureTestListener"/>
    </listeners>

    <!-- Smoke Tests -->
    <test name="Smoke">
        <classes>
            <class name="com.demo.framework.tests.smoke.SampleTest"/>
            <class name="com.demo.framework.tests.smoke.LoginTest"/>
            <class name="com.demo.framework.tests.smoke.CarouselTest"/>
            <class name="com.demo.framework.tests.smoke.WebViewTest"/>
            <class name="com.demo.framework.tests.smoke.DragDropTest"/>
        </classes>
    </test>
</suite>
