<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Native Demo Suite" parallel="tests" thread-count="2">
    <listeners>
        <!-- Allure TestNG listener -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <!-- Custom test listener for logging and screenshots -->
        <listener class-name="com.demo.framework.listeners.AllureTestListener"/>
    </listeners>

    <!-- Smoke Tests -->
    <test name="Smoke">
        <classes>
            <class name="com.demo.framework.tests.smoke.SampleTest"/>
        </classes>
    </test>

    <!-- Regression Tests (optional, for future use) -->
    <!--
    <test name="Regression">
        <classes>
            <class name="com.demo.framework.tests.regression.SampleRegressionTest"/>
        </classes>
    </test>
    -->
</suite>
